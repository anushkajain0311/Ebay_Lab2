<div ng-controller="addtocart">
	<div class="container">
		<br><h1 align="center"> </h1><br>
			<div class="row" ng-init="getData()">
				<div class="panel" ng-repeat = "product in productlist">
			      		<div class="row">
			      			<div class="col-md-10"><h4> {{product.productName}}</h4></div>
			      			<div class="col-md-2" ><h4> ${{product.productprice}}</h4></div>
			      		</div>
			      		<div class="row">
			      			<div class="col-md-6"><h5> {{product.productDescription}}</h5> </div>
			      			<div class="col-md-4"><h5> Quantity Available:{{product.productQuantity}}</h5> </div>
			      			<div class="col-md-2"> <h5>Free Shipping </h5></div>
					    </div>
					    <div class="row"> 
					    	<div class="col-md-10"> Seller: {{product.firstName}} {{product.lastName}} shipping from {{product.address}} </div>
					    	<div class="col-md-2"><button class="btn btn-success btn-md" ng-click="addtocart(product)">Add to Cart</button></div>
					    </div>
				</div>
	    	</div>
   </div>
</div>